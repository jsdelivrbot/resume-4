%%% Margins.
\usepackage[margin=1in]{geometry}

%%% Disable page numbering.
\pagestyle{empty}

%%% No indentation.
\setlength{\parindent}{0pt}

%%% Formatting for the name.
\def\name#1\par{
\begin{center}
\Large{\textbf{#1}}
\end{center}
\par
}

%%% Section headings.
\def\section#1{
\vskip\baselineskip
\textbf{\uppercase{#1}}\par\nobreak
}

%%% Entry headings (such as job headings).
\def\entry#1{
\vskip0.5\baselineskip
\textbf{#1}\par\nobreak
}

%%% List formatting.
\def\simpleitem{\par\nobreak$\bullet\;$}
\usepackage{enumitem}
\newenvironment{items}{
\begin{itemize}[leftmargin=1.5em,topsep=4pt,itemsep=0pt]
}{\end{itemize}}
\def\paragraph#1\par{\begin{items}\item[]#1\end{items}}

%%% Automatically make lists using asterisks.
\def\makeactive#1{\catcode`#1 = \active \ignorespaces}
\def\star#1\par{\begin{items}\def\star{\item}\star#1\end{items}\par\penalty-1000}

%%% For optionally hiding sections.
\usepackage{color}
\definecolor{grey}{gray}{0.7}
\long\def\hide#1{}
\long\def\shadow#1{{\color{grey}{#1}}}
\def\unhide{\let\hide\shadow}

%%% Make special characters act normally.
\makeactive&\def&{\&}
